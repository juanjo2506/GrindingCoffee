<!DOCTYPE html>
<html lang="en">
<%- include("partials/head", {title:"Registro", css:"register"}) %>

    <body>
        <%- include("partials/nav.ejs") %>
            <main>
                <div class="container">
                    <h2 class="mainTitle">Unete a Grinding Coffee<i class="fa-solid fa-mug-saucer fa-l"></i></h2>
                    <div class="flexBox">
                        <form action="/user/register" method="POST" enctype="multipart/form-data">
                            <div class="inputGroup">
                                <label for="name">Nombre:</label>
                                <input class="inputDefault" type="text" name="name"
                                    value="<%= locals.oldData ? oldData.name : null%>">
                                <% if (locals.errors && errors.name) { %>
                                    <p class="errorFeedback">
                                        <%= errors.name.msg %>
                                    </p>
                                <% } %>
                            </div>
                            <div class="inputGroup">
                                <label for="lastName">Apellido:</label>
                                <input class="inputDefault" type="text" name="lastName"
                                    value="<%= locals.oldData ? oldData.lastName : null%>">
                                <% if (locals.errors && errors.lastName) { %>
                                    <p class="errorFeedback">
                                        <%= errors.lastName.msg %>
                                    </p>
                                <% } %>
                            </div>
                            <div class="inputGroup">
                                <label for="email">Correo electrónico:</label>
                                <input class="inputDefault" type="email" name="email"
                                    value="<%= locals.oldData ? oldData.email : null%>">
                                <% if (locals.errors && errors.email) { %>
                                    <p class="errorFeedback">
                                        <%= errors.email.msg %>
                                    </p>
                                <% } %>
                            </div>
                            <div class="inputGroup">
                                <label>Foto de perfil:</label>
                                <br>
                                <input id="avatar" type="file" name="avatar">
                                <% if (locals.errors && errors.avatar) { %>
                                    <p class="errorFeedback">
                                        <%= errors.avatar.msg %>
                                    </p>
                                <% } %>
                            </div>
                            <div class="inputGroup">
                                <label for="password">Contraseña:</label>
                                <input class="inputDefault" type="password" name="password">
                                <% if (locals.errors && errors.password) { %>
                                    <p class="errorFeedback">
                                        <%= errors.password.msg %>
                                    </p>
                                <% } %>
                            </div>
                            <div class="buttonGroup">
                                <button class="mainButton" type="submit">Registrarse</button>
                                <button class="secondaryButton" type="reset">Borrar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </main>
            <%- include("partials/footer.ejs") %>
    </body>
</html>