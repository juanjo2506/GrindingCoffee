<!DOCTYPE html>
<html lang="en">

<%- include("partials/head", {title:"login", css:"login"}) %>
    <body>
        <%- include("partials/nav.ejs") %>
       <main>
            <div class="container">
                <h2 class="mainTitle">Iniciar sesión<i class="fa-solid fa-mug-saucer fa-l"></i></h2>
                <div class="flexBox">
                    <form action="/user/login" method="POST">
                        <div class="inputGroup">
                            <label for="email">Correo electrónico:</label>
                            <input class="inputDefault" type="email" name="email">
                            <% if (locals.errors && errors.email) { %>
                                <p class="errorFeedback">
                                    <%= errors.email.msg %>
                                </p>
                            <% } %>
                        </div>
                        <div class="inputGroup">
                            <label for="password">Contraseña:</label>
                            <input class="inputDefault" type="password" name="password">
                            <% if (locals.errors && errors.password) { %>
                                <p class="errorFeedback">
                                    <%= errors.password.msg %>
                                </p>
                            <% } %>
                        </div>

                        <label for="remember_user" class="remember_user">
                            <input type="checkbox" id="remember_user" name="remember_user"> Recordar usuario
                        </label>
                        <div class="buttonGroup">
                            <button class="mainButton" type="submit">Iniciar sesión</button>
                            <label for="">¿Olvidaste tu contraseña?</label>
                            <button class="secondaryButton" type="reset">Recuperar contraseña</button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
        <%- include("partials/footer.ejs") %>      
    </body>
</html>